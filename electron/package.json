{
  "main": "main.js",
  "name": "ollamagui",
  "version": "1.0.0",
  "description": "An unofficial GUI for Ollama.",
  "author": "Elia Salerno",
  "scripts": {
    "start": "concurrently \"node .output/server/index.mjs\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.ollamagui",
    "productName": "ollamagui",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      ".output/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    }
  }
}
